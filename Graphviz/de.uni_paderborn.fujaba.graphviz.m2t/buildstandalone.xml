<?xml version="1.0" encoding="UTF-8"?>
<project basedir="." default="compile" name="de.uni_paderborn.fujaba.graphviz.m2t">
    
    <property name="ECLIPSE_HOME" value="/data/jenkins/jobs/Eclipse Target Platform/lastSuccessful/archive/targetPlatform"/>
    <property name="ECLIPSE_WORKSPACE" value="../"/>

    <property name="SOURCE_FOLDER" value="${basedir}/src/"/>    
    <property name="OUTPUT_FOLDER" value="${basedir}/bin/"/>

    <path id="de.uni_paderborn.fujaba.graphviz.m2t.classpath">
        <path refid="de.uni_paderborn.fujaba.graphviz.m2t.libraryclasspath" />
    </path>

    <!-- The classpath with only the dependencies used by the project (a dependency with the parser is required) -->
    <path id="de.uni_paderborn.fujaba.graphviz.m2t.libraryclasspath">
        <pathelement location="${ECLIPSE_WORKSPACE}/de.uni_paderborn.fujaba.graphviz.m2t/bin"/>
    	<pathelement location="${ECLIPSE_WORKSPACE}/de.uni_paderborn.fujaba.graphviz/bin"/>
    	<pathelement location="${ECLIPSE_WORKSPACE}/org.storydriven.core/target/classes"/>
    	<fileset dir="${ECLIPSE_HOME}/plugins">
            <include name="*.jar"/>
        </fileset>
    </path>
    
    <taskdef id="acceleoCompiler" name="acceleoCompiler" classname="org.eclipse.acceleo.parser.compiler.AcceleoCompiler" classpathref="de.uni_paderborn.fujaba.graphviz.m2t.libraryclasspath" >
    </taskdef>

    <!-- Change the value of the property SOURCE_FOLDERS to match the configuration of your project. -->
    <target name="compile">
        <acceleoCompiler sourceFolder="${SOURCE_FOLDER}"
                         outputFolder="${OUTPUT_FOLDER}"
                         dependencies=""
                         binaryResource="false"
    					 packagesToRegister="de.uni_paderborn.fujaba.graphviz.GraphvizPackage;de.uni_paderborn.fujaba.graphviz.dot.DotPackage;de.uni_paderborn.fujaba.graphviz.plain.PlainPackage;org.storydriven.core.CorePackage">
        </acceleoCompiler>
    </target>
</project>
