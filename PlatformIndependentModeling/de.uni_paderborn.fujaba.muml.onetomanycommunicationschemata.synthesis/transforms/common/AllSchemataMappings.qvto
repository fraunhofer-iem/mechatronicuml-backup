helper Transition :: TransferSchemataLogicalExpression( position:PositionSelectorKind, compOperator : ComparingOperator) : ComparisonExpression {
		
		var comp : ComparisonExpression := new ComparisonExpression();
			
		comp.rightExpression := self. TransferSchemataEndpointReference(position);
		
