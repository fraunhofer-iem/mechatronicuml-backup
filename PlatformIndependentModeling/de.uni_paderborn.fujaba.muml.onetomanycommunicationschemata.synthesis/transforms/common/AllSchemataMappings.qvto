helper  Transition :: TransferSchemata2Action(actionName:String, varName:String, assignValue:String) : Action {
	
		var act : Action := new Action();
		
		act.name := actionName;		
		
		act.expressions +=self.TransferSchemata2AssignmentBlock( varName ,	assignValue);
		
		return act;
	}
	
helper Transition :: TransferSchemata2AssignmentBlock(varName:String, assignValue:String ) : Block {
		

		return self.Transition2Block(self.TransferSchemata2Assignment( varName, assignValue));
		
		
	}
	
helper Transition :: TransferSchemata2TwoActions(actionName:String, varName1:String, varName2:String, assignValue:String) : Action {
	
		var act : Action := new Action();
		
		act.name := actionName;
		
		act.expressions += self. TransferSchemata2TwoActionsBlock( varName1, varName2, assignValue);
		
		return act;
		
	}
	
helper Transition :: TransferSchemata2TwoActionsBlock(varName1:String, varName2:String, assignValue:String) : Block {
		
		var block : Block := new Block();
		
		block.expressions += self. TransferSchemata2Assignment( varName1, assignValue);
		
		block.expressions += self. TransferSchemata2Assignment( varName2, assignValue);
		
		return block;
		
	}
	
helper Transition :: TransferSchemata2TwoActionsTransAct(actionName:String, varName:String, assignValue:String) : Action {
	
		var act : Action := new Action();
		
		act.name := actionName + ', ' + self.action.name;
		
		act.expressions += self. TransferSchemata2TwoActionsTransActBlock( varName, assignValue);
		
		return act;
	}
	
helper Transition :: TransferSchemata2TwoActionsTransActBlock(varName1:String, assignValue:String) : Block {
		
		var block : Block := new Block();
		
		block.expressions += self. TransferSchemata2Assignment(varName1, assignValue);
		
		if(self.action.expressions->first().oclIsTypeOf(Block)){
			block.expressions += self.action.expressions.oclAsType(Block).expressions.map Expression2Expression(block);
		}else{
			block.expressions += self.action.expressions.map Expression2Expression(block);
		}endif;
		
		return block;
	}


	
helper Transition :: TransferSchemata2Assignment(varName:String, assignValue:String) : Assignment {		
		
		return self.Schema2TypedNamedElementAssignmentExpression(AssignOperator::ASSIGN,self.map Transition2SubroleSpecificBooleanVaribale(varName),self.Schema2LiterarExpression(assignValue));
	
	}
	
helper Transition :: Schema2LiterarExpression(assignValue:String) : LiteralExpression {
		
		var lit : LiteralExpression := new LiteralExpression();
		
		lit.value := assignValue;		
		
		return lit;
	}

