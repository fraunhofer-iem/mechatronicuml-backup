helper Transition :: Schema2TypedNamedElementAssignmentExpression(operator : AssignOperator, referencedElement : TypedNamedElement, assignedExpression : Expression) : actionlanguage::Assignment{
	var ass : Assignment := new Assignment();
	
	ass.lhs_typedNamedElementExpression := self. Schema2TypedNamedElementExpression(referencedElement);
	
	ass.rhs_assignExpression := assignedExpression;
	
	ass.assignOperator := operator;
	
	return ass;
}

helper Transition :: Schema2TypedNamedElementExpression(referencedElement : TypedNamedElement) : TypedNamedElementExpression{
	
	var ex : TypedNamedElementExpression := new TypedNamedElementExpression();
	
	ex.typedNamedElement := referencedElement;
	
	return ex;
}

