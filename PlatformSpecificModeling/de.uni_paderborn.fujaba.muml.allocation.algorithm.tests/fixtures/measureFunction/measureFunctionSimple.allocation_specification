			in
			let e1 : hwresourceinstance::ResourceInstance = self.hardwarePlatformInstanceConfiguration.resources->any(name='e1')
			in
			Set{Tuple{foo : instance::ComponentInstance = c1, bar : hwresourceinstance::ResourceInstance = e1, coefficient = -1},
				Tuple{foo : instance::ComponentInstance = c2, bar : hwresourceinstance::ResourceInstance = e1, coefficient = 42},
				Tuple{foo : instance::ComponentInstance = c3, bar : hwresourceinstance::ResourceInstance = e1, coefficient = 4711}

            };
