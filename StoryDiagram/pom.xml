<?xml version="1.0" encoding="UTF-8"?>
<project xsi:schemaLocation="http://maven.apache.org/POM/4.0.0 http://maven.apache.org/xsd/maven-4.0.0.xsd" xmlns="http://maven.apache.org/POM/4.0.0"
    xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance">
  <modelVersion>4.0.0</modelVersion>
  <groupId>org.muml.storydiagram.group</groupId>
  <artifactId>StoryDiagram</artifactId>
  <version>1.0.0-SNAPSHOT</version>
  <packaging>pom</packaging>
  
   <properties>
		<tycho-version>0.26.0</tycho-version>
		<maven-compiler-plugin-version>2.5.1</maven-compiler-plugin-version>
		<maven.compiler.source>1.8</maven.compiler.source>
		<maven.compiler.target>1.8</maven.compiler.target>
		<jacoco.version>0.7.4.201502262128</jacoco.version>
		<project.build.sourceEncoding>UTF-8</project.build.sourceEncoding>
	</properties>
    
  <modules>
    <module>org.muml.storydiagram</module>
    <module>org.muml.storydiagram.diagram</module>
    <module>org.muml.storydiagram.diagram.custom</module>
    <module>org.muml.storydiagram.diagram.interpreter</module>
    <module>org.muml.storydiagram.diagram.ocl</module>
    <module>org.muml.storydiagram.edit</module>
    <module>org.muml.storydiagram.edit.properties</module>
    <module>org.muml.storydiagram.editor</module>
    <module>org.muml.storydiagram.expressions</module>
    <module>org.muml.storydiagram.expressions.common</module>
    <module>org.muml.storydiagram.expressions.common.ui</module>
    <module>org.muml.storydiagram.expressions.ui</module>
    <module>org.muml.storydiagram.feature</module>
    <module>org.muml.storydiagram.interpreter.core</module>
    <module>org.muml.storydiagram.interpreter.core.debug</module>
    <module>org.muml.storydiagram.interpreter.core.debug.client</module>
    <module>org.muml.storydiagram.interpreter.core.eclipse</module>
    <module>org.muml.storydiagram.interpreter.core.executiontrace</module>
    <module>org.muml.storydiagram.interpreter.core.executiontrace.edit</module>
    <module>org.muml.storydiagram.interpreter.core.executiontrace.editor</module>
    <module>org.muml.storydiagram.interpreter.core.mdelab</module>
    <module>org.muml.storydiagram.interpreter.eclipse</module>
    <module>org.muml.storydiagram.interpreter.ocl</module>
    <!--<module>org.muml.storydiagram.interpreter.tests</module> -->
    <module>org.muml.storydiagram.reachanalysis.reachabilitygraph.sdm</module>
    <module>org.muml.storydiagram.reachanalysis.reachabilitygraph.sdm.wrapper</module>
    <module>org.muml.storydiagram.reachanalysis.sdm</module>
    <module>org.muml.storydiagram.reachanalysis.sdm.test</module>
    <module>org.muml.storydiagram.reachanalysis.sdm.transform</module>
    <module>org.muml.storydiagram.reachanalysis.sdm.transform.test</module>
    <module>org.muml.storydiagram.repository</module>
    <module>org.muml.storydiagram.resourcesetsynchronizer</module>
    <module>org.muml.storydiagram.ui</module>
    <module>org.muml.storydiagram.verification.sdd</module>
    <module>org.muml.storydiagram.verification.sdd.basicsdd</module>
    <module>org.muml.storydiagram.verification.sdd.basicsdd.diagram</module>
    <module>org.muml.storydiagram.verification.sdd.basicsdd.diagram.custom</module>
    <module>org.muml.storydiagram.verification.sdd.basicsdd.edit</module>
    <module>org.muml.storydiagram.verification.sdd.basicsdd.edit.properties</module>
    <module>org.muml.storydiagram.verification.sdd.edit</module>
    <module>org.muml.storydiagram.verification.sdd.edit.properties</module>
  </modules>
  
  
  <build>
    <plugins>
		<plugin>
			<groupId>org.eclipse.tycho</groupId>
			<artifactId>target-platform-configuration</artifactId>
			<version>${tycho-version}</version>
			<configuration>
			  <environments>
				<environment>
				  <os>win32</os>
				  <ws>win32</ws>
				  <arch>x86</arch>
				</environment>
				<environment>
				  <os>linux</os>
				  <ws>gtk</ws>
				  <arch>x86_64</arch>
				</environment>
				<environment>
				  <os>macosx</os>
				  <ws>cocoa</ws>
				  <arch>x86_64</arch>
				</environment>
			  </environments>
			</configuration>
		  </plugin>
      <plugin>
        <groupId>org.eclipse.tycho</groupId>
        <artifactId>tycho-maven-plugin</artifactId>
        <version>${tycho-version}</version>
        <extensions>true</extensions>
      </plugin>
      <plugin>
         <groupId>org.eclipse.tycho</groupId>
         <artifactId>tycho-p2-repository-plugin</artifactId>
         <version>${tycho-version}</version>
         <configuration>
            <includeAllDependencies>true</includeAllDependencies>
         </configuration>
      </plugin>   
	  <!-- enable source feature generation -->
	   <plugin>
		<groupId>org.eclipse.tycho.extras</groupId>
		<artifactId>tycho-source-feature-plugin</artifactId>
		<version>${tycho-version}</version>
		<executions>
		 <execution>
		  <id>source-feature</id>
		  <phase>package</phase>
		  <goals>
		   <goal>source-feature</goal>
		  </goals>
		 </execution>
		</executions>
		<configuration>
		 <excludes>
		   <!--provide plug-ins not containing any source code -->
		  <plugin id="org.muml.storydiagram.repository" />
		  <plugin id="org.muml.storydiagram.reachanalysis.sdm.transform" />
		 </excludes>
		</configuration>
	   </plugin>
	   <plugin>
		<groupId>org.eclipse.tycho</groupId>
		<artifactId>tycho-source-plugin</artifactId>
		<version>${tycho-version}</version>
		<executions>
		 <execution>
		  <id>plugin-source</id>
		  <goals>
		   <goal>plugin-source</goal>
		  </goals>
		 </execution>
		</executions>
	   </plugin>
	   <plugin>
		<groupId>org.eclipse.tycho</groupId>
		<artifactId>tycho-p2-plugin</artifactId>
		<version>${tycho-version}</version>
		<executions>
		 <execution>
		  <id>attached-p2-metadata</id>
		  <phase>package</phase>
		  <goals>
		   <goal>p2-metadata</goal>
		  </goals>
		 </execution>
		</executions>
	   </plugin>
    </plugins>
  </build>
  
    <profiles>
        <profile>
          <id>localJenkins</id> 
          <activation>
            <property>
              <name>env</name>
              <value>localJenkins</value>
            </property>
          </activation>
		  <repositories>	
			  <repository>
				<id>UpdateSite</id>
				<layout>p2</layout>
				<url>https://muml-build.cs.upb.de/job/UpdateSite-Maven/lastSuccessfulBuild/artifact/org.muml.releng.site.repository/target/repository</url>
			</repository>
		</repositories>		  
        </profile>
  </profiles>
  
  <repositories>
		<repository>
			<id>eclipse-oxygen</id>
			<layout>p2</layout>
			<url>http://download.eclipse.org/releases/oxygen</url>
		</repository>
	  	<repository>
			<id>gmf-tooling</id>
			<layout>p2</layout>
			<url>http://download.eclipse.org/modeling/gmp/gmf-tooling/updates/releases/</url>
        </repository>
	</repositories>
    
</project>
