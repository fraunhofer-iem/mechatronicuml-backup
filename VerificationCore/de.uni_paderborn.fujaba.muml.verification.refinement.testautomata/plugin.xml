<?xml version="1.0" encoding="UTF-8"?>
<?eclipse version="3.4"?>
<plugin>
   <extension
         point="org.eclipse.ui.menus">
      <menuContribution
            allPopups="false"
            locationURI="popup:de.uni_paderborn.fujaba">
         <command
               commandId="de.uni_paderborn.fujaba.muml.verification.refinement.testautomata.verifyRefinement"
               label="Verify Refinement"
               style="push">
            <visibleWhen>
                  <with
                        variable="selection">
                     <iterate
                           ifEmpty="false">
                        <or>
                           <instanceof
                                 value="de.uni_paderborn.fujaba.muml.component.diagram.edit.parts.DiscretePortEditPart">
                           </instanceof>
                           <instanceof
                                 value="de.uni_paderborn.fujaba.muml.component.DiscretePort">
                           </instanceof>
                        </or>
                     </iterate>
                  </with>
            </visibleWhen>
         </command>
      </menuContribution>
   </extension>
   <extension
         point="org.eclipse.ui.commands">
      <command
            categoryId="de.uni_paderborn.fujaba"
            defaultHandler="de.uni_paderborn.fujaba.muml.verification.refinement.testautomata.commands.VerifyRefinement"
            description="Verify whether behaviour of port is correct refinement of role"
            id="de.uni_paderborn.fujaba.muml.verification.refinement.testautomata.verifyRefinement"
            name="Verify Refinement">
      </command>
   </extension>

</plugin>
